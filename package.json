  "description": "OpenCap Financial Management System",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:test": "cross-env NODE_ENV=test node app.js",
    "dev": "nodemon app.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
