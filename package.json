    "test:all": "npm run test:coverage && cd frontend && npm run test:coverage && cd .. && npm run test:e2e",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:zerodb": "node scripts/initZeroDB.js",
    "test:zerodb": "node scripts/testZeroDB.js"
  },
